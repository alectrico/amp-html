default: &default



    # ----------
    # COMPONENTS
    # ----------

    # Learn more about amphtml components: https://github.com/jonhue/amphtml/wiki/Components
    # Run `amphtml bundle` after adding or removing components!
    components:
        <% if options[:all] || options[:analytics] %>analytics<% else %># analytics<% end %>
        <% if options[:all] || options[:iframe] %>iframe<% else %># iframe<% end %>
        <% if options[:all] || options[:notifications] %>notifications<% else %># notifications<% end %>
        <% if options[:all] || options[:anim] %>anim<% else %># anim<% end %>
        <% if options[:all] || options[:ad] %>ad<% else %># ad<% end %>
        <% if options[:all] || options[:social] %>social<% else %># social<% end %>



    # ------------
    # VIEWS FORMAT
    # ------------

    <% if options[:split] %>
    # ## Change the default format used for views.
    # ## Defaults to `amp`
    <% unless options[:format] == "amp" %>default_format: <%= options[:format] %><% else %># default_format: html<% end %>
    <% else %>
    ## Change the default format used for views.
    ## Defaults to `amp`
    <% unless options[:format] == "amp" %>default_format: <%= options[:format] %><% else %># default_format: html<% end %>
    <% end %>

    <% if options[:split] %>
    # ## Formats used to find a view if the default format does not exist.
    # ## Default is ``
    fallback_format: html xhtml
    <% else %>
    ## Formats used to find a view if the default format does not exist.
    ## Default is ``
    fallback_format: amp xhtml
    <% end %>



    <% if options[:all] || options[:analytics] %>
    # -------------------
    # ANALYTICS COMPONENT
    # -------------------

    ## Set up the AMP Analytics Component
    analytics:
        # ## Specifies the default vendor for amp_analytics tags. You can always override this default by passing a different vendor
        # ## List of all supported vendors: https://www.ampproject.org/docs/reference/components/ads/amp-analytics
        # default_vendor: parsely

        google_analytics:
            # ## Set your Google Analytics account to enable the amp_google_analytics tag helper
            # account: UA-*****-*
    <% end %>




